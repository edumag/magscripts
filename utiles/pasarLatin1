## Mostrar ayuda

function help() {

   local -i count=0
   while read linea ; do 
      let count++
      if [ $count -gt 2 ] ; then
         [ "$linea" = "" ] && return
         echo "$linea" | sed 's/^##//' | sed 's/@brief //' | sed 's/@file //' 
      fi
   done < "$0"
   echo

   }


if [ "$1" == "-h" ] || [ "$1" == "--help" ] ; then

   help
   exit

fi

for f in $*
do
echo $f
vi -c "wq! ++enc=latin1" $f
done

